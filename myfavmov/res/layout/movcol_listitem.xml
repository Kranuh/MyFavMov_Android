<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="300dp" >

    <ImageView
        android:id="@+id/movcol_item_backdrop"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/nobackdrop" />

    <RelativeLayout
        android:id="@+id/movcol_item_textLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="#3F000000" >

        <com.timkranen.fonthelpers.TypefaceTextView
            android:id="@+id/movcol_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            geekui:customTypeface="fonts/ROBOTO-LIGHT.TTF" />
    </RelativeLayout>

</FrameLayout>